<div class="antiscroll-box">
  <div class="antiscroll-inner">
    <div class="ember-table-table-scrollable-wrapper">
      {{#if tableComponent.numFixedColumns}}
        {{ember-table-body-lazy-block 
          className="ember-table-left-table-block"
          content=tableComponent.bodyContent
          columns=tableComponent.fixedColumns
          width=tableComponent._fixedLeftBlockWidth
          numItemsShowing=tableComponent._numItemsShowing
          scrollTop=scrollTop
          tableComponent=tableComponent
          startIndex=tableComponent._startIndex
        }}
      {{/if}}
      
      {{ember-table-body-lazy-block 
        className="ember-table-main-table-block"
        content=tableComponent.bodyContent
        columns=tableComponent.tableColumns
        scrollLeft=tableComponent._tableScrollLeft
        width=tableComponent._tableBlockWidth
        numItemsShowing=tableComponent._numItemsShowing
        scrollTop=scrollTop
        tableComponent=tableComponent
        startIndex=tableComponent._startIndex
      }}

      {{#if tableComponent.numRightFixedColumns}}
        {{ember-table-body-lazy-block
          className="ember-table-right-table-block"
          content=tableComponent.bodyContent
          columns=tableComponent.rightFixedColumns
          width=tableComponent._fixedRightBlockWidth
          numItemsShowing=tableComponent._numItemsShowing
          scrollTop=scrollTop
          tableComponent=tableComponent
          startIndex=tableComponent._startIndex
        }}
      {{/if}}

    </div>
  </div>
</div>
