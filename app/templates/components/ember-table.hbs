{{#if hasHeader}}
  {{header-table-container
     numFixedColumns=numFixedColumns
     tableColumns=tableColumns
     fixedColumns=fixedColumns
     fixedBlockWidth=_fixedBlockWidth
     tableBlockWidth=_tableBlockWidth
     headerHeight=_headerHeight
     tableContainerWidth=_tableContainerWidth
     scrollLeft=_tableScrollLeft
     enableColumnReorder=enableColumnReorder
     isShowingSortableIndicator=_isShowingSortableIndicator
     sortableIndicatorLeft=_sortableIndicatorLeft
     headerHeight=_headerHeight
     columnMode=columnMode
     columnsFillTable=columnsFillTable
  }}
{{/if}}
{{body-table-container
  itemViewClass=tableRowViewClass
	numFixedColumns=numFixedColumns
	tableColumns=tableColumns
	fixedColumns=fixedColumns
	fixedBlockWidth=_fixedBlockWidth
	tableBlockWidth=_tableBlockWidth
  bodyContent=bodyContent
  bodyHeight=_bodyHeight
  bodyWidth=_width
  rowHeight=rowHeight
  rowWidth=_rowWidth
  scrollLeft=_tableScrollLeft
  rowDidClick='rowDidClick'
}}
{{#if hasFooter}}
  {{footer-table-container
      numFixedColumns=numFixedColumns
      footerContent=footerContent
      tableColumns=tableColumns
      fixedColumns=fixedColumns
      fixedBlockWidth=_fixedBlockWidth
      tableBlockWidth=_tableBlockWidth
      footerHeight=footerHeight
      tableContainerWidth=_tableContainerWidth 
      scrollLeft=_tableScrollLeft
      headerHeight=_headerHeight
      tableContentHeight=_tableContentHeight
      bodyHeight=_bodyHeight
  }}
{{/if}}
{{scroll-container
    scrollContainerWidth=_scrollContainerWidth
    fixedColumnsWidth=_fixedColumnsWidth
    scrollLeft=_tableScrollLeft
    tableColumnsWidth=_tableColumnsWidth
    tableContentHeight=_tableContentHeight

}}
{{column-sortable-indicator
   sortableIndicatorLeft=_sortableIndicatorLeft
   tableHeight=_height
   isShowingSortableIndicator=_isShowingSortableIndicator
}}
