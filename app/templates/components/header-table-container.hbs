<div class="ember-table-table-fixed-wrapper">
  {{#if numFixedColumns}}
    {{header-block
      columns=fixedColumns
      blockWidth=fixedBlockWidth
      rowWidth=rowWidth
      rowHeight=headerHeight
      headerHeight=headerHeight
      enableColumnReorder=enableColumnReorder
      isShowingSortableIndicator=isShowingSortableIndicator
      sortableIndicatorLeft=sortableIndicatorLeft
      columnMode=columnMode
      columnsFillTable=columnsFillTable
      toggleTableCollapse='toggleTableCollapse'
      class="ember-table-left-table-block"
    }}
  {{/if}}
  {{header-block
    columns=tableColumns
    scrollLeft=scrollLeft
    blockWidth=tableBlockWidth
    rowWidth=rowWidth
    rowHeight=headerHeight
    headerHeight=headerHeight
    enableColumnReorder=enableColumnReorder
    isShowingSortableIndicator=isShowingSortableIndicator
    sortableIndicatorLeft=sortableIndicatorLeft
    columnMode=columnMode
    class="ember-table-right-table-block"
  }}
</div>
